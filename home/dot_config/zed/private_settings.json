// see: https://zed.dev/docs/configuring-zed or `open default settings`
{
  // VIM
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank",
    "use_multiline_find": true,
    "use_smartcase_find": true,
    // "default_mode": "helix_normal",
    "cursor_shape": {
      "normal": "block",
      "insert": "bar",
      "visual_block": "bar",
      "visual_line": "bar"
    }
  },

  // DISABLE
  "cursor_blink": false,
  "indent_guides": {
    "enabled": false
  },
  "scrollbar": {
    "axes": {
      "horizontal": false
    }
  },
  "tab_bar": {
    "show": false
  },
  "gutter": {
    "line_numbers": false,
    "code_actions": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "toolbar": {
    "quick_actions": false,
    "selections_menu": false,
    "agent_review": false
  },
  "search": {
    "button": false
  },

  // FONTS
  "buffer_font_size": 20,
  "ui_font_size": 18,

  // THEME
  "theme": {
    "mode": "system",
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine Moon"
  },

  // MUST
  "autosave": "on_focus_change",
  "soft_wrap": "none",
  "tab_size": 2,
  "wrap_guides": [80],
  "auto_install_extensions": {
    "html": true
  },
  "use_smartcase_search": true,
  "terminal": {
    "option_as_meta": true,
    "copy_on_select": true,
    "default_height": 800,
    "toolbar": {
      "breadcrumbs": false
    }
  }
}
