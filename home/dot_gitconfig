;reference: https://github.com/voku/dotfiles/blob/master/.gitconfig

[user]
  name = Wellington Mendoza
  email = wellsaint91@gmail.com

[includeIf "gitdir:~/Code/work/"]
  path = ~/Code/work/.gitconfig

[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true

[color]
  ui = true

[diff]
  compactionHeuristic = true
  renamelimit = 9999
  renames = copies
  algorithm = patience
  wsErrorHighlight = all
  identHeuristic = on
  colorMoved = default
  tool = difftastic
  external = difft

[difftool]
  prompt = false

[difftool "difftastic"]
  # See `man git-difftool` for a description of MERGED, LOCAL and REMOTE.
  cmd = difft "$MERGED" "$LOCAL" "abcdef1" "100644" "$REMOTE" "abcdef2" "100644"
  # cmd = difft "$LOCAL" "$REMOTE"  

[pager]
  difftool = true

[core]
  pager = delta
  trustctime = false
  precomposeunicode = false
  untrackedCache = true
  excludesfile = ~/.gitignore_global
  attributesfile = ~/.gitattributes
  fscache = true

[interactive]
  diffFilter = delta --color-only --features=interactive

[delta]
  navigate = true
  features = decorations
  whitespace-error-style = 22 reverse

[delta "interactive"]
  keep-plus-minus-markers = false

# [delta "decorations"]
#   commit-decoration-style = bold yellow box ul
#   file-style = bold crimson
#   file-decoration-style = bold crimson box

[init]
  defaultBranch = main
  templatedir = ~/.git_template

[push]
  default = simple
  followTags = true
  autoSetupRemote = true

[pull]
  default = current
  rebase = true
  ff = only

[fetch]
  prune = true
  writeCommitGraph = true

[merge]
  stat = true
  ff = false
  conflictstyle = diff3

[grep]
  lineNumber = true

[apply]
  whitespace = warn

[rebase]
  autosquash = true

[credential]
  # cache the password for http-auth
  helper = cache

[log]
  decorate = short

[rerere]
  enabled = true

[branch]
  sort = -committerdate

[advice]
  detachedHead = false
